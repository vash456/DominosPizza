<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/colorfondodominos"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/pizza_colombiana"
        android:id="@+id/iImagenProd"
        android:layout_gravity="center_vertical"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.9">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tName"
                android:text="Pizza Colombiana"
                android:textColor="@color/khaki"
                android:gravity="left"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tDescrip"
                android:text="Cebolla, maÃ­z tierno, tocineta y chorizo."
                android:gravity="left"
                android:textColor="@color/white"
                android:textSize="11sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_weight="0.1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="Precio: "
                android:textColor="@color/lightgreen"
                android:id="@+id/tPrecio"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.9"/>

            <ImageButton
                android:background="@color/colorfondodominos"
                android:id="@+id/Imagenbutton"
                android:layout_weight="0.1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:adjustViewBounds="true"
                android:padding="7dp"
                android:scaleType="fitCenter"
                android:src="@drawable/favoritos_buttom_off"
                android:layout_gravity="right"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>